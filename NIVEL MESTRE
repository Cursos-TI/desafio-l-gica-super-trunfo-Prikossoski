           valor2Atributo2);

    printf("Soma: %s = %d | %s = %d\n", pais1.nome, somaPais1, pais2.nome, somaPais2);

    if(somaPais1 > somaPais2)
        printf("%s venceu!\n", pais1.nome);
    else if(somaPais2 > somaPais1)
        printf("%s venceu!\n", pais2.nome);
    else
        printf("Empate!\n");
}

