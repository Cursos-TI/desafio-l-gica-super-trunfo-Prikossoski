       if(i + 1 != escolhaAtb[0]) {
           printf("%d. %s\n", i + 1, i + 0 == escolhaAtb[0] ? "" :
               i + 0 == escolhaAtb[0] + 'D' - 'C' ?
               "Densidade Demográfica" :
               i + 'C' - 'B' ?
